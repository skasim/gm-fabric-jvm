#set( $symbol_dollar = '$' )
<assembly>
    <id>app</id>
    <formats>
        <format>tgz</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/appassembler/jsw/${symbol_dollar}{app.name}</directory>
            <outputDirectory/>
            <includes>
              <include>**/*</include>
            </includes>
            <excludes>
              <exclude>bin/*</exclude>
              <exclude>lib/wrapper.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/jsw/${symbol_dollar}{app.name}</directory>
            <outputDirectory/>
            <fileMode>755</fileMode>
            <includes>
              <include>bin/*</include>
            </includes>
            <excludes>
                <exclude>bin/wrapper-*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/package</directory>
            <outputDirectory/>
            <includes>
              <include>**/*</include>
            </includes>
            <excludes>
                <exclude>rpm/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
          <!-- Create an empty logs directory -->
          <outputDirectory>logs</outputDirectory>
          <directory>${project.build.directory}/classes</directory>
          <excludes>
            <exclude>**/*</exclude>
          </excludes>
        </fileSet>
        <!-- New JSW files -->
        <fileSet>
            <directory>${project.build.directory}/wrapper-delta-pack-${symbol_dollar}{jsw.version}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>wrapper-*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/wrapper-delta-pack-${symbol_dollar}{jsw.version}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>wrapperdemo.jar</exclude>
                <exclude>wrappertest.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
